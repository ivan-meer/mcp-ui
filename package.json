{
  "name": "mcp-ui-monorepo",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --filter=\"./packages/*\" --parallel dev",
    "build": "pnpm --filter=\"./packages/*\" build",
    "preview": "pnpm --filter=\"./packages/*\" --parallel preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "version:patch": "echo \"Versioning with Changesets, then run pnpm install\" && pnpm changeset version && pnpm install --lockfile-only",
    "publish-packages": "pnpm build && pnpm changeset publish",
    "docs:dev": "pnpm --filter=\"@mcp-ui/docs\" dev",
    "docs:build": "pnpm --filter=\"@mcp-ui/docs\" build",
    "docs:preview": "pnpm --filter=\"@mcp-ui/docs\" preview"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "c8": "^8.0.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.6",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.4",
    "vitepress": "^1.0.0-rc.44"
  },
  "packageManager": "pnpm@8.10.2"
} 